{
    "compilerOptions": {
        "target": "es6",
        "module": "umd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "!**/*.d.ts",
        "typings/tsd.d.ts",
        "!node_modules/**"
    ],
    "files": [
        "examples/simple.ts",
        "index.ts",
        "test/index.test.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
